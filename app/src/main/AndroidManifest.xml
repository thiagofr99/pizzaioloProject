<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devthiagofurtado.pizzaioloapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_pizzaiolo_novo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pizzaiolo_novo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.CarrinhoActivity"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".activity.PedidoActivity" />
        <activity
            android:name=".activity.PrincipalActivity"
            android:theme="@style/BarTheme" />
        <activity android:name=".activity.LoginActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activity.CadastroActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>