<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/doppio_one"
            android:gravity="center"
            android:text="Qtd"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/doppio_one"
            android:gravity="center"
            android:text="Nome Produto"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/doppio_one"
            android:gravity="center"
            android:text="Tamanho"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/doppio_one"
            android:gravity="center"
            android:text="Valor Unt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/doppio_one"
            android:gravity="center"
            android:text="Sub Total"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textAdapterQtd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/doppio_one"
            android:gravity="center"
            android:text="Qtd"
            android:textColor="@color/design_default_color_background"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textAdapterNome"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/doppio_one"
            android:gravity="center"
            android:text="Carregando"
            android:textColor="@color/design_default_color_background"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textAdapterTamanho"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/doppio_one"
            android:gravity="center"
            android:text="Carregando"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_background"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textAdapterVlrUnit"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/doppio_one"
            android:gravity="center"
            android:text="0.00"
            android:textColor="@color/design_default_color_background"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textAdapterSubTotal"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/doppio_one"
            android:gravity="center"
            android:text="0.00"
            android:textColor="@color/design_default_color_background"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>